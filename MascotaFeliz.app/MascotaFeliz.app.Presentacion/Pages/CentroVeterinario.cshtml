@page
@model MascotaFeliz.app.Presentacion.Pages.CentroVeterinarioModel
@{
}
<div id="principal" style="width: 100%; display: table; border-spacing: 10px; background-color: #FFFFFF; border-radius:22px;">
    <div id="izquierda" style="border=gray 1px solid; width: 50%; display: table-cell; padding: 20px; background-color: #D7BDE2; border-radius:22px;">
        <h1>Registro de Empresas</h1>
        </hr>
        <form method="POST">
            <div class="form-group">
                <label>Nit: </label>
                <input id="nit" type="text" placeholder="Digite Nit" class="form-control" style="width:60%;">
            </div>
            <div class="form-group">
                <label>Nombre del Centro Veterinario: </label>
                <input id="nombre" type="text" placeholder="Digite Nombre" class="form-control" style="width:60%;">
            </div>
            <div class="form-group">
                <label>Dirección: </label>
                <input id="direccion" type="text" placeholder="Digite Dirección" class="form-control" style="width:60%;">
            </div>
            <br>
            <div>
                <button id="btnRegistrar" type="submit" class="btn btn-dark" style="display: block;">Registrar Empresa</button>             
                <button id="btnActualizar" type="submit" class="btn btn-dark" style="display: none;">Guardar Cambios</button> 
                <button id="btnCancelar" type="submit" class="btn btn-dark" onclick="LimpiarDatos();">Cancelar</button> 
            </div>
            
            
        </form>
    </div>

    <div id="derecha" style="border=gray 1px solid; width: 50%; display: table-cell; padding: 6px;">
        <h1>Listado de Centros Veterinarios</h1>
        <table class="table">
            <tr style="background-color: rgb(153,102,153);">
                <td>Nit</td>
                <td>Nombre</td>
                <td>Direccion</td>
                <td></td>
                <td></td>
            </tr>
            @foreach (var centroVeterinario in Model.listaCentrosVeterinarios)
            {
                <tr>
                    <td>@centroVeterinario.Nit</td>
                    <td>@centroVeterinario.Nombre</td>
                    <td>@centroVeterinario.Direccion</td>
                    <td><div><img src="~/img/update.png" width="30px" onclick="CargarDatos('@centroVeterinario.Nit','@centroVeterinario.Nombre','@centroVeterinario.Direccion');"></div></td>
                    <td><div><img src="~/img/delete.png" width="30px" onclick="MensajeEliminar();"></div></td>
                </tr>
            }
        </table>
    </div>
</div>

<script>
    function MensajeActualizar(){
        confirm("¿Esta seguro que desea actualizar el Centro Veterinario?");
    }

    function MensajeEliminar(){
        confirm("¿Esta seguro que desea eliminar el Centro Veterinario?");
    }

    function LimpiarDatos(){
        $("#nit").val('');
        $("#nombre").val('');
        $("#direccion").val('');
        $("btnRegistrar").css('display','block');
        $("btnActualizar").css('display','none');
    }

    function CargarDatos(Nit, Nombre, Direccion){
        $("#nit").val(Nit);
        $("#nombre").val(Nombre);
        $("#direccion").val(Direccion);
        $("btnRegistrar").css('display','none');
        $("btnActualizar").css('display','block');
    }
</script>